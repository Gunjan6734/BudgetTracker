<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount :"
            android:textColor="@color/common_orange"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/amount_title"
            app:layout_constraintTop_toTopOf="@id/amount_title"
            app:layout_constraintBottom_toBottomOf="@id/amount_title"/>
        <TextView
            android:id="@+id/date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textColor="@color/common_orange"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toStartOf="@id/date_value"
            app:layout_constraintStart_toEndOf="@id/amount_value"
            app:layout_constraintTop_toTopOf="@id/amount_title"
            app:layout_constraintBottom_toBottomOf="@id/amount_title"
            app:layout_constraintHorizontal_bias="0.6"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06/02/2023"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/date_title"
            app:layout_constraintTop_toTopOf="@id/date_title"
            app:layout_constraintBottom_toBottomOf="@id/date_title"/>
        <TextView
            android:id="@+id/type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income Source :"
            android:textColor="@color/common_orange"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/amount_title"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/type_title"
            app:layout_constraintTop_toTopOf="@id/type_title"
            app:layout_constraintBottom_toBottomOf="@id/type_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>