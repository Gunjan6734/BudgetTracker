<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    >
    <include
        layout="@layout/toolbar_placeholder"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fl_toolbar_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/monthly_budget_cv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:id="@+id/year_spinner_head_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Select Year"
                        android:textColor="@color/common_orange"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="10dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/year_spinner_cv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintTop_toBottomOf="@id/year_spinner_head_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/year_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:clipToPadding="true"
                            />

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/month_spinner_head_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/year_spinner_cv"
                        android:text="Select Month"
                        android:textColor="@color/common_orange"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="10dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/spinner_cv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintTop_toBottomOf="@id/month_spinner_head_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/month_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:clipToPadding="true"
                            />

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/monthly_budget_head_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/spinner_cv"
                        android:text="Set Monthly Budget(In Rs)"
                        android:textColor="@color/common_orange"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="20dp"
                       />
                    <EditText
                        android:id="@+id/monthly_budget_value_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/monthly_budget_head_tv"
                        app:layout_constraintStart_toStartOf="@id/monthly_budget_head_tv"
                        app:layout_constraintEnd_toStartOf="@id/submit_monthly_budget_tv"
                        android:text=""
                        android:background="@drawable/edit_text_rounded_corner_bg"
                        android:textColor="@color/light_black"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="20sp"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <Button
                        android:id="@+id/submit_monthly_budget_tv"
                        android:text="Submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/common_orange"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="@id/monthly_budget_value_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginEnd="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/other_details_cv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >


                    <TextView
                        android:id="@+id/selected_month_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Month"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        app:layout_constraintHorizontal_weight=".5"
                        />

                    <TextView
                        android:id="@+id/selected_year_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/selected_month_tv"
                        app:layout_constraintTop_toTopOf="@id/selected_month_tv"
                        app:layout_constraintBottom_toBottomOf="@id/selected_month_tv"
                        android:text="Year"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight=".5"
                        android:textSize="24sp"
                        android:layout_marginStart="20dp"
                        />

                    <TextView
                        android:id="@+id/monthly_budget_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/selected_month_tv"
                        android:text="Monthly Budget :"
                        android:textColor="@color/common_orange"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/monthly_budget_value_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/monthly_budget_title"
                        app:layout_constraintTop_toTopOf="@id/monthly_budget_title"
                        app:layout_constraintBottom_toBottomOf="@id/monthly_budget_title"
                        android:text=""
                        android:layout_marginStart="20dp"
                        android:textColor="@color/light_black"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/total_spending_head_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/monthly_budget_title"
                        android:text="Total Spending :"
                        android:textColor="@color/common_orange"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/total_spending_value_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/total_spending_head_tv"
                        app:layout_constraintTop_toTopOf="@id/total_spending_head_tv"
                        app:layout_constraintBottom_toBottomOf="@id/total_spending_head_tv"
                        android:text=""
                        android:layout_marginStart="20dp"
                        android:textColor="@color/light_black"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/total_income_head_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/total_spending_head_tv"
                        android:text="Total Income :"
                        android:textColor="@color/common_orange"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/total_income_value_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/total_income_head_tv"
                        app:layout_constraintTop_toTopOf="@id/total_income_head_tv"
                        app:layout_constraintBottom_toBottomOf="@id/total_income_head_tv"
                        android:text=""
                        android:layout_marginStart="20dp"
                        android:textColor="@color/light_black"
                        android:textSize="20sp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGraph"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_details_cv"
        android:layout_marginBottom="30dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>